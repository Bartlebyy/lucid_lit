.pull-right
  =link_to "Download MOBI", "/#{@book.title.gsub(/ /, '_')}.mobi", class: "btn btn-primary"
  =link_to "Download EPUB", "/#{@book.title.gsub(/ /, '_')}.epub", class: "btn btn-primary"
%h1= @book.title
%h4= "by #{@book.author}"
%h3 Chapters
-@chapters.order("chapter_order asc").each do |chapter|
  %ul
    %li
      =link_to chapter.name, chapter_path(chapter), {:style=>'color:#000000;'}
